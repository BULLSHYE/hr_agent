# Environment Configuration for AI HR Recruitment Agent

# OpenAI API Configuration
open_ai_key = 
gemini_api_key = 

# Database Configuration
DATABASE_URL=sqlite:///./hr_agent.db

# JWT Authentication
SECRET_KEY=your_super_secret_jwt_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# LLM Configuration
DEFAULT_LLM_MODEL=openai  # Options: openai, local
LOCAL_LLM_BASE_URL=http://localhost:11434  # For Ollama
LOCAL_LLM_MODEL=mistral  # or phi3

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIR=./chroma_db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,txt